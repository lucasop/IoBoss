<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/image_bg"

        android:layout_width="fill_parent"
        android:layout_height="142dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ic_row_place"
            android:layout_width="36dp"
            android:layout_height="72dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/separaV"
            android:paddingBottom="32dp"
            card_view:srcCompat="@drawable/ic_action_places" />

        <TextView
            android:id="@+id/rvzonaID"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ic_row_place"
            android:gravity="center|start"
            android:text="HOME"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/rvname"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/rvzonaID"
            android:layout_toEndOf="@+id/ic_row_place"
            android:gravity="center|start"
            android:text="Via Roma 15"
            android:textColor="@android:color/black" />

        <View
            android:id="@+id/space_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/ic_row_place"
            android:layout_alignParentStart="true"
            android:background="@android:color/darker_gray" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/space_1"
            android:gravity="left|end">

            <TableRow
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/rvstato"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:textColor="@android:color/black" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="30dp">

            </TableRow>


            <TableRow android:background="#C0FFFFFF">

                <TextView
                    android:id="@+id/rvaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black" />
            </TableRow>


            <TableRow android:background="#C0FFFFFF">

                <TextView
                    android:id="@+id/rvcoordinate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textStyle="italic" />
            </TableRow>

            <TableRow
                android:id="@+id/row3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C0FFFFFF">

                <TextView
                    android:id="@+id/rvraggio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/black"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="metri"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/black" />
            </TableRow>

            <TableRow
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/rvtipo"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:text=" metri"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/rvdbID"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:textColor="@android:color/black" />
            </TableRow>
        </TableLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>